    "awesome-typescript-loader": "^5.2.1",
    "cpy-cli": "^2.0.0",
    "css-loader": "^3.2.0",
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
